<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoDSM.TelaInicial"
             BackgroundColor="#DFF0FF"
             Title="Bem-vinda">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <Image Source="logo.png"
                   HeightRequest="150"
                   HorizontalOptions="Center" />

            <Label Text="ScoreView"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#2e7d32" />

            <Frame BackgroundColor="White"
                   Padding="20"
                   CornerRadius="12"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">
                    <Entry Placeholder="Email"
                           Keyboard="Email"
                           BackgroundColor="#eeeeee"
                           PlaceholderColor="#888"
                           TextColor="Black"
                           HeightRequest="45" />

                    <Entry Placeholder="Senha"
                           IsPassword="True"
                           BackgroundColor="#eeeeee"
                           PlaceholderColor="#888"
                           TextColor="Black"
                           HeightRequest="45" />

                    <Button Text="Entrar"
                            BackgroundColor="#2e7d32"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="45"
                            Clicked="OnEntrarClicked"/>
                </VerticalStackLayout>
            </Frame>

            <Label Text="Paula Cristina Abib Teixeira"
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"
                   Margin="0,30,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
